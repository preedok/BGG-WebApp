# Server
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database PostgreSQL (gunakan salah satu: DATABASE_URL atau DB_*)
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@localhost:5432/db_bgg_group
DB_HOST=localhost
DB_PORT=5432
DB_NAME=db_bgg_group
DB_USERNAME=postgres
DB_PASSWORD=YOUR_PASSWORD
DB_DIALECT=postgres

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# CORS (URL frontend)
CORS_ORIGIN=http://localhost:3000

# Database sync: set SYNC_ALTER=true hanya jika perlu ALTER tabel (hati-hati jika ada view)
# SYNC_ALTER=true

# Upload (file disimpan di project root /uploads)
MAX_FILE_SIZE=5242880

# Optional: Email, rate limit, log
# SMTP_HOST= SMTP_PORT= SMTP_USER= SMTP_PASSWORD= EMAIL_FROM=
# RATE_LIMIT_WINDOW=15 RATE_LIMIT_MAX_REQUESTS=100
LOG_LEVEL=info
